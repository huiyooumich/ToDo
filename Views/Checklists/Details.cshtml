@model ToDo.Models.Checklist

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Checklist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChecklistName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChecklistName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<h2>Items</h2>


@if (Model.Items != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].Done)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Done)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ChecklistId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ChecklistId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ChecklistId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.ChecklistId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
